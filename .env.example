# .env file for Blog Backend Configuration
# Server configuration
PORT=:8080
APP_ENV=development  # options: development | production | test

# Database configuration (MongoDB example)
DB_URI=mongodb://localhost:27017
DB_NAME=blog_db
USER_COLLECTION=users
REFRESH_TOKEN_COLLECTION=refresh_tokens
# JWT secrets and expiry
ACCESS_TOKEN_SECRET=your_access_token_secret
REFRESH_TOKEN_SECRET=your_refresh_token_secret
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_HOURS=168

# Context timeout
CONTEXT_TIMEOUT_SECONDS=5

# Logger
LOG_LEVEL=debug  # options: debug | info | warn | error

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Blog configuration
BLOG_COLLECTION=blogs
BLOG_COLLECTION=blogs_posts


# Pagination and filtering defaults
PAGE=2
PAGE_SIZE=10
RECENCY=newest

# BlogComment configuration
BLOG_COMMENT_COLLECTION=blog_comments
# BlogUserReaction configuration
BLOG_USER_REACTION_COLLECTION=blog_user_reactions

USER_COLLECTION=users
REFRESH_TOKEN_COLLECTION=refresh_tokens
PASSWORD_RESET_TOKEN_COLLECTION=password_reset_tokens
# Password reset token configuration
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=10

# Email configuration
SMTP_HOST=email_host
SMTP_PORT=587
SMTP_FROM=your_email
SMTP_USERNAME=your_username
SMTP_PASSWORD=your-app-password
# User configuration
USER_COLLECTION=users

# Refresh token collection
REFRESH_TOKEN_COLLECTION=refresh_tokens

# Gemini configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL_NAME=your_gemini_model

# imagekit configuration
IMAGEKIT_PRIVATE_KEY=private_key
IMAGEKIT_PUBLIC_KEY=public_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Google OAuth2 configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/google/callback
